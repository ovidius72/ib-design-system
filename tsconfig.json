{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "noImplicitThis": true,
    "noImplicitAny": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "pretty": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "baseUrl": "./"
  },
  "exclude": ["node_modules", "build", "locale", "config", "*.stories.*"],
  "include": ["./src/**/*", "./typings/**/*.d.ts", "./testing/test-setup.ts"]
}
